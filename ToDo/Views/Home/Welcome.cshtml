@model IEnumerable<ToDo.Models.UserTask>

@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (UserTask task in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => task.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => task.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => task.IsComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => task.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@task.TaskId">Edit</a> |
                <a asp-action="Details" asp-route-id="@task.TaskId">Details</a> |
                <a asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
            </td>
        </tr>
}

    </tbody>
</table>
